# Example configuration for spring-boot-playground (no secrets here)
spring.application.name=spring-boot-playground
spring.graphql.graphiql.enabled=true
spring.jpa.show-sql=true

# Example datasource settings - replace with values in your local .env or CI secrets
spring.datasource.url=jdbc:postgresql://localhost:5432/spring-boot-playground
spring.datasource.username=your_db_user
spring.datasource.password=
spring.datasource.driver-class-name=org.postgresql.Driver
spring.jpa.hibernate.ddl-auto=update

